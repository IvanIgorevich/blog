<div class="mb-5">
  <h1>Articles</h1>
  <%= link_to "New article", new_article_path, class: 'btn btn-outline-success' %>

</div>

<div class="row mb-2" id="articles">
  <% @articles.each do |article| %>
    <div class="mb-5">
      <%= render article %>
      <p>
        <%= link_to "Show this article", article, class: 'btn btn-outline-primary' %>
      </p>
    </div>
  <% end %>
</div>
